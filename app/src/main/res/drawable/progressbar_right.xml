<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--设置进度条背景颜色为白色-->
    <item android:id="@android:id/background" android:left="1dp">
        <shape>
            <corners android:radius="12dp" android:topLeftRadius="0dp" android:bottomLeftRadius="0dp"></corners>
            <solid android:color="@color/white"></solid>
        </shape>
    </item>
    <!--设置进度条颜色为灰色-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="45"
                    android:endColor="#626775"
                    android:startColor="#626775"></gradient>
                <corners android:radius="5dp" android:topLeftRadius="0dp" android:bottomLeftRadius="0dp"></corners>
            </shape>
        </clip>
    </item>
</layer-list>
