        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size14</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!--基本内容字体-->
    <style name="textRedContent">
        <item name="android:textColor">@color/red1</item>
        <item name="android:textSize">@dimen/font_size12</item>
    </style>

    <!--基本内容字体-->
    <style name="textRedTitleContent">
        <item name="android:textColor">#f00000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size14</item>
    </style>
    <!--基本内容字体-->
    <style name="textHindContent">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/font_size12</item>
    </style>
    <!--基本内容字体-->
    <!--每日签到-->

    <!--基本内容字体-->
    <style name="textWhitheContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size12</item>
    </style>

    <!--基本内容字体-->
    <style name="textBigTitleContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size25</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--基本内容字体-->
    <style name="textWhitheTileContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size14</item>
    </style>

    <!--基本内容字体-->

    <!--基本内容字体-->
    <style name="textAppColorContent">
        <item name="android:textColor">@color/app_main_color</item>
        <item name="android:textSize">@dimen/font_size12</item>
    </style>

    <!--基本内容字体-->

    <!--基本内容字体-->

