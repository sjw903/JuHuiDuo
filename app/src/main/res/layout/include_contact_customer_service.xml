<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size30"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="80dp"
            android:layout_height="@dimen/margin_size0"
            android:background="@color/col_eb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size20"
            android:layout_marginRight="@dimen/margin_size20"
            android:text="联系客服"
            android:textColor="@color/col_666"
            android:textSize="@dimen/font_size14" />

        <View
            android:layout_width="80dp"
            android:layout_height="@dimen/margin_size0"
            android:background="@color/col_eb" />
    </LinearLayout>
    <!--QQ-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:drawableLeft="@mipmap/icon_psd_qq"
        android:gravity="center" />
</LinearLayout>