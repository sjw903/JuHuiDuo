<?xml version="1.0" encoding="utf-8"?>
<com.android.jdhshop.malladapter.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/itemshopcart_lyall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemshopcart_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unsel_check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemshopcart_img"
                android:scaleType="fitXY"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemshopcart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="asdflialjilajidsfjalsdfis"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/itemshopcart_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="奶黄白，155" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/itemshopcart_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0积分"
                    android:textColor="@color/red1"
                    android:textSize="@dimen/font_size18" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/itemshopcart_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jian" />

                    <TextView
                        android:id="@+id/itemshopcart_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="1" />

                    <ImageView
                        android:id="@+id/itemshopcart_jia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jia" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/itemshopcart_del"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="#ff0000"
        android:gravity="center"
        android:padding="@dimen/margin_size10"
        android:text="删除"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_size18" />

</com.android.jdhshop.malladapter.SlideLayout>
