<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_size5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_size5"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/play_img"
            android:visibility="gone"
            android:layout_width="@dimen/margin_size60"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/margin_size60"
            android:src="@drawable/play"/>
        <ImageView
            android:id="@+id/zq_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zcicon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_child"
            style="@style/textTitleContent"
            android:layout_marginTop="@dimen/margin_size8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="产品名称" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tx3"
                style="@style/textAppColorContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_couponbox"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_size30"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="5.0元" />
            <TextView
                android:id="@+id/tx4"
                style="@style/textAppColorContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:textSize="@dimen/font_size13"
                tools:text="5.0元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx2"
                style="@style/textRedContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size14"
                android:textStyle="bold"
                tools:text="¥20.00" />

            <TextView
                android:id="@+id/tx2_2"
                style="@style/textHindContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size10"
                android:layout_marginLeft="@dimen/margin_size5"
                android:layout_toRightOf="@id/tx2"
                tools:text="¥30.00" />
            <TextView
                android:id="@+id/tx5"
                style="@style/textHindContent"
                android:gravity="center|right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin_size11"
                tools:text=":3000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>