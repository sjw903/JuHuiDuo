    <GridView
        android:id="@+id/gv_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size15"
        android:layout_marginLeft="@dimen/margin_size15"
        android:verticalSpacing="@dimen/margin_size10"
        android:background="@color/white"
        android:numColumns="2"></GridView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size50"
        android:textSize="@dimen/font_size20"
        android:textColor="@color/col_333"
        android:layout_marginRight="@dimen/margin_size15"
        android:layout_marginLeft="@dimen/margin_size15"
        android:gravity="center_vertical"
        android:text="选择支付方式"/>

    <ListView
        android:id="@+id/lv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:dividerHeight="@dimen/margin_size0"
        android:divider="@color/col_eb"></ListView>
