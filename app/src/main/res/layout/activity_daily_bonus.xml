<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_f7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/qiandao_bg" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/margin_size20"
            android:layout_height="@dimen/margin_size20"

             />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="每日福利"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size16" />

        <TextView
            android:id="@+id/txt_record"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/margin_size20"
            android:text="记录"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size14"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:layout_marginTop="@dimen/margin_size50"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10">

        <com.android.jdhshop.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/margin_size60"
            android:layout_height="@dimen/margin_size60"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/app_icon" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size16" />

                    <ImageView
                        android:id="@+id/img_vip"
                        android:visibility="gone"
                        android:layout_width="@dimen/margin_size30"
                        android:layout_height="@dimen/margin_size30"
                         />

                    <TextView
                        android:id="@+id/txt_group_name"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/margin_size5"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size14" />
                </LinearLayout>
            <TextView
                android:id="@+id/txt_num"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/margin_size2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="已经连续签到1填"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_qdone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/signup_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/margin_size5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/margin_size5"
            android:text="立即签到"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_info"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jinbi"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:id="@+id/line_one"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/orange"></View>

        <TextView
            android:id="@+id/txt_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jinbi"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:id="@+id/line_two"
            android:background="@color/orange"></View>

        <TextView
            android:id="@+id/txt_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jinbi"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:id="@+id/line_three"
            android:background="@color/orange"></View>

        <TextView
            android:id="@+id/txt_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jinbi"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:id="@+id/line_four"
            android:background="@color/orange"></View>

        <TextView
            android:id="@+id/txt_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yinbi"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/col_666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:id="@+id/line_five"
            android:background="@color/orange"></View>

        <TextView
            android:id="@+id/txt_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yinbi"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/col_666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:id="@+id/line_six"
            android:layout_weight="1"
            android:background="@color/orange"></View>

        <TextView
            android:id="@+id/txt_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yinbi"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/col_666"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_margin="@dimen/dp_10"

        android:background="@drawable/shape_ll"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="积分任务"
            android:textColor="@color/col_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size5"
            android:text="做任务赚积分"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <ImageView
                android:id="@+id/qiand"
                android:layout_width="37dp"
                android:layout_height="37dp"
                 />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="签到积分"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size5"
                    android:text="连续签到可获得更多积分"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/asd"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/margin_size5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/margin_size5"
                android:text="签到"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mission_gw" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购物积分"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size5"
                    android:text="每消费一元可获得一个积分"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_gw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/asd"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/margin_size5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/margin_size5"
                android:text="去购物"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <ImageView
                android:id="@+id/tuijian"
                android:layout_width="37dp"
                android:layout_height="37dp"
                 />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="推荐粉丝"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size5"
                    android:text="每推荐1名得10积分，粉丝消费也可获得积分"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/asd"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/margin_size5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/margin_size5"
                android:text="去完成"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <ImageView
                android:id="@+id/ziliao"
                android:layout_width="37dp"
                android:layout_height="37dp"
                 />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="完善资料"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size5"
                    android:text="完善个人资料可获得20积分"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/asd"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/margin_size5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/margin_size5"
                android:text="去完成"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>