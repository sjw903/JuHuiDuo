<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_size8"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemitem_img"
            android:src="@mipmap/app_icon"
            android:layout_width="@dimen/margin_size80"
            android:layout_height="@dimen/margin_size80" />
        <TextView
            android:maxLines="1"
            android:id="@+id/itemitem_name"
            android:layout_marginTop="@dimen/margin_size3"
            android:text="眼罩"
            android:textSize="@dimen/font_size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_12"
        android:id="@+id/itemitem_qhj"
        android:layout_marginTop="@dimen/margin_size3"
        android:textColor="@color/colorPrimary"
        android:text="券后价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
