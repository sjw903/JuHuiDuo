<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:divider="@drawable/divider_line"
    android:showDividers="middle"
    android:dividerPadding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SetHuanYingYuActivity">
    <include layout="@layout/include_topbar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="助理群昵称"
        android:textColor="#999999"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/tv_ai_qunname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/margin_size30"
        android:paddingRight="@dimen/margin_size12"
        android:text="鑫年科技"
        android:textColor="@color/col_title"
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进群欢迎语"
        android:layout_marginTop="10dp"
        android:textColor="#999999"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_robot_status_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/margin_size32"
            android:paddingRight="@dimen/margin_size12"
            android:text="进群欢迎语开启状态"
            android:textColor="@color/col_title"
            android:textSize="14dp" />

        <com.suke.widget.SwitchButton
            android:id="@+id/tv_robot_status"
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            app:sb_background="#CCCCCC"
            app:sb_checked_color="#DE4F4B" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
       >

        <EditText
            android:id="@+id/et_word"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:maxLength="200"
            android:gravity="top"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:textColor="#2e2e2e"
            android:paddingTop="15dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_word_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_word"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="18dp"
            android:text="/200"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_word_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_word"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/tv_word_total"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="12sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/set_huanying_geng"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/set_assistant_yuanjiao"
        android:text="更新"
        android:textSize="16dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"/>
</LinearLayout>