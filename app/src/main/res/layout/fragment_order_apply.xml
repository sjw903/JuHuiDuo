<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin_size12"
    android:paddingRight="@dimen/margin_size12"
    android:orientation="horizontal">
    <com.work.youpin.widget.AutoClearEditText
        android:id="@+id/et_account"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_size40"
        android:layout_marginBottom="@dimen/margin_size2"
        android:layout_marginTop="@dimen/margin_size10"
        android:layout_weight="2"
        android:background="@drawable/bg_btn_border_gray"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:hint="请输入订单号"
        android:paddingLeft="@dimen/margin_size12"
        android:textColorHint="@color/col_999"
        android:textColor="@color/col_333"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_size40"
        android:layout_weight="0.8"
        android:layout_marginLeft="@dimen/margin_size12"
        android:layout_marginTop="@dimen/margin_size10"
        android:gravity="center"
        android:text="确认"
        android:background="@drawable/bg_border_orange_btn"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>