<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_size80"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/wxloglog"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/margin_size20"
            android:text="@string/welcome_to_app"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size16" />
        <LinearLayout
            android:id="@+id/tv_login_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size20"
            android:layout_marginTop="@dimen/margin_size130"
            android:layout_marginRight="@dimen/margin_size20"
            android:background="@drawable/bg_tv_circle_half_appmain"
            android:gravity="center">

            <Button
                android:id="@+id/btn_one2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_size50"
                android:background="@null"
                android:drawablePadding="@dimen/margin_size10"
                android:text="微信登录"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size14" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/tv_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size20"
            android:layout_marginTop="@dimen/margin_size20"
            android:layout_marginRight="@dimen/margin_size20"
            android:background="@drawable/bg_txt_red"
            android:padding="@dimen/margin_size0"
            android:gravity="center">

            <Button
                android:id="@+id/btn_one1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_size50"
                android:background="@null"
                android:drawableLeft="@mipmap/login_mobile_red"
                android:drawablePadding="@dimen/margin_size10"
                android:text="手机号登录"
                android:textColor="#333333"
                android:textSize="@dimen/font_size14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_size30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size20"
            android:layout_marginRight="@dimen/margin_size20"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/col_eb"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size10"
                android:layout_marginRight="@dimen/margin_size10"
                android:text="注册账号" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/col_eb"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size40"
            android:layout_marginTop="@dimen/margin_size25"
            android:layout_marginRight="@dimen/margin_size40"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="还没有账号?" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="@dimen/margin_size10"
                android:text="立即注册>"
                android:textColor="@color/red1"
                android:textSize="@dimen/font_size14" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
