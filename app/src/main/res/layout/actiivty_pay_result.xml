<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_topbar"></include>
    <TextView
        android:id="@+id/txt_money"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size15"
        android:text="250.56"
        android:textSize="@dimen/font_size25"
        android:textColor="@color/red1"/>
    <TextView
        android:id="@+id/txt_order_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/col_333"
        android:textSize="@dimen/font_size14"/>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size40"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size14"
        android:background="@drawable/bg_tv_circle_half_appmain"
        android:layout_margin="@dimen/margin_size40"/>
</LinearLayout>