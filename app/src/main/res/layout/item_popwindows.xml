<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#00000000"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="@dimen/margin_size5"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_150">
        <ImageView
            android:id="@+id/itempopwindows_img"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_width="@dimen/margin_size110"
            android:layout_height="@dimen/margin_size110" />
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:id="@+id/popwindowtop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/itempopwindows_addgwc"
            android:gravity="center"
            android:text="确定"
            android:layout_width="0dp"
            android:background="@color/red1"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/popwindowtop"
        android:layout_marginTop="80dp"
        android:background="#ffffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itempopwindows_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="阿斯顿发送到发送到发阿斯顿发送到发"
                android:textSize="17dp" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/itempopwindows_jian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jian" />

                        <TextView
                            android:id="@+id/itempopwindows_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="1" />

                        <ImageView
                            android:id="@+id/itempopwindows_jia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jia" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#EAEAEB"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

                    <ListView

                        android:id="@+id/popwindow_listvew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </ListView>
        </LinearLayout>

        <ImageView
            android:id="@+id/itempopwindows_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/close" />
    </RelativeLayout>
</RelativeLayout>
