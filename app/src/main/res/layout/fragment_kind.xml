<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_seach_topbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="wrap_content"
            android:scrollbars="none"
            android:layout_height="match_parent"
            android:background="@color/col_f7">
            <LinearLayout
                android:id="@+id/ver_ll"
                android:layout_width="100dp"
                android:dividerPadding="0dp"
                android:showDividers="middle"
                android:divider="@drawable/divider_line"
                android:orientation="vertical"
                android:background="@color/col_f7"
                android:layout_height="wrap_content">
            </LinearLayout>
        </ScrollView>
        <com.android.jdhshop.utils.VerticalViewPager
            android:id="@+id/ver_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.android.jdhshop.utils.VerticalViewPager>
    </LinearLayout>

</LinearLayout>