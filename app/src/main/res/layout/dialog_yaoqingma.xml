<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/yuanjiao"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定邀请码"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5EB6B3B3"
            />
        <EditText
            android:id="@+id/ed_message"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_background"
            android:hint="请输入邀请码或推荐人手机号"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="14dp"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="此弹窗只提示一次"
            android:textSize="13dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="17dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/positiveTextView"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="绑定"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:textColor="#fff"
                android:background="@drawable/yuanjiao_zise"
                />
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="跳过"
                android:layout_alignParentRight="true"
                android:id="@+id/negativeTextView"
                android:textColor="#C85201E6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_tiaoguo_background"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>