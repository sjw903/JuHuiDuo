<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_size10"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_size10"
        android:paddingTop="@dimen/margin_size10"
        android:paddingRight="@dimen/margin_size10">

        <com.android.jdhshop.widget.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/margin_size50"

            android:layout_height="@dimen/margin_size50"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_size10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nickname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="bottom"
                android:text=""
                android:textColor="@color/red1"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:paddingTop="@dimen/margin_size7"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size12" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_share_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn"
            android:drawableLeft="@mipmap/shequ_share"
            android:drawablePadding="@dimen/margin_size5"
            android:gravity="center"
            android:paddingTop="@dimen/margin_size5"
            android:paddingBottom="@dimen/margin_size5"
            android:paddingRight="@dimen/margin_size10"
            android:paddingLeft="@dimen/margin_size10"
            android:text=""
            android:textColor="@color/red1"
            android:textSize="@dimen/font_size14" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/margin_size10"
        android:text=""
        android:textSize="@dimen/font_size14" />

    <com.android.jdhshop.utils.CustomGridView
        android:id="@+id/item_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:listSelector="@color/white"
        android:layout_marginLeft="@dimen/margin_size10"
        android:numColumns="3" />

    <LinearLayout
        android:id="@+id/ll_shequ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size10"
        android:background="@drawable/bg_ad"
        android:orientation="vertical"
        android:padding="@dimen/margin_size5">

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:padding="@dimen/margin_size5"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size14" />

        <TextView
            android:id="@+id/txt_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_size10"
            android:background="@drawable/shape_btn"
            android:padding="@dimen/margin_size5"
            android:text="复制评论"
            android:textColor="@color/red1"
            android:textSize="@dimen/font_size12" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_high_yj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size10"
            android:background="@drawable/shape_btn2"
            android:paddingLeft="@dimen/margin_size10"
            android:paddingTop="@dimen/margin_size5"
            android:paddingRight="@dimen/margin_size10"
            android:layout_marginBottom="@dimen/margin_size10"
            android:paddingBottom="@dimen/margin_size5"
            android:text=""
            android:textSize="@dimen/font_size12"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/txt_coupon_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size10"
            android:paddingLeft="@dimen/margin_size10"
            android:paddingTop="@dimen/margin_size5"
            android:paddingRight="@dimen/margin_size10"
            android:layout_marginBottom="@dimen/margin_size10"
            android:paddingBottom="@dimen/margin_size5"
            android:text=""
            android:textSize="@dimen/font_size14"
            android:textColor="@color/red1" />
    </LinearLayout>
</LinearLayout>