<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/itemnear_img"
        android:scaleType="fitXY"
        android:layout_width="@dimen/margin_size60"
        android:layout_height="@dimen/margin_size60"
        android:layout_marginRight="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemnear_tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="coco"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/near_xx1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                 />

            <ImageView
                android:id="@+id/near_xx2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                 />

            <ImageView
                android:id="@+id/near_xx3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                 />

            <ImageView
                android:id="@+id/near_xx4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                 />

            <ImageView
                android:id="@+id/near_xx5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                 />

            <TextView
                android:id="@+id/itemnear_tvpingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="8dp"
                android:text="5.5" />

            <TextView
                android:id="@+id/itemnear_tvrenjunxf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="人均消费"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/near_xx6"
                android:layout_width="14dp"
                android:layout_height="14dp"
                 />

            <TextView
                android:id="@+id/itemnear_tvaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="1"
                android:text="nanjingshi"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemnear_lytype"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemnear_tvxiaoliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销量4443"
            android:textColor="#FEAB0E"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/itemnear_tvjuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="999m"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</LinearLayout>