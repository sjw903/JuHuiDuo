<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size50"
    android:background="@color/white"
    android:elevation="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="@dimen/margin_size45"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_back"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textSize="@dimen/font_size14"
            android:visibility="gone" />

        <com.android.jdhshop.widget.AutoClearEditText
            android:id="@+id/tv_title"
            style="@style/textHindContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_size8"
            android:layout_marginRight="@dimen/margin_size5"
            android:layout_marginTop="@dimen/margin_size8"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/col_333"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:background="@drawable/bg_border_gray_16dp"
            android:hint="请输入搜索内容"
            android:paddingLeft="@dimen/margin_size10"
            android:paddingRight="@dimen/margin_size10" />


        <TextView
            android:id="@+id/tv_right"
            style="@style/textTitleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_size8"
            android:text="确认" />
</LinearLayout>

