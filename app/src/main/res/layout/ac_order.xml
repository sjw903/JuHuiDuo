            android:gravity="center"
            android:background="@drawable/radio_line"
            android:checked="true"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="我的订单"
            android:textColor="@drawable/radio_radiogroup_style"
            android:textSize="@dimen/font_size15" />
        <RadioButton
            android:id="@+id/rb_direct"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:background="@drawable/radio_line"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="直邀订单"
            android:textColor="@drawable/radio_radiogroup_style"
            android:textSize="@dimen/font_size15" />
        <RadioButton
            android:id="@+id/rb_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:background="@drawable/radio_line"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="间邀订单"
            android:textColor="@drawable/radio_radiogroup_style"
            android:textSize="@dimen/font_size15" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size1"
        android:background="@color/col_eb"></View>
