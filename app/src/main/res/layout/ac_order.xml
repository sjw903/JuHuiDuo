        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/font_size20"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/font_size10">
        <com.android.jdhshop.widget.AutoClearEditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:textSize="@dimen/font_size14"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size8"
            android:layout_marginRight="@dimen/margin_size5"
            android:layout_marginTop="@dimen/margin_size8"
            android:layout_weight="1"
            android:padding="@dimen/margin_size5"
            android:singleLine="true"
            android:drawableLeft="@mipmap/news_search"
            android:background="@drawable/bg_border_gray_16dp"
            android:hint="查询订单号"
            android:paddingLeft="@dimen/margin_size10"
            android:paddingRight="@dimen/margin_size10" />
        <TextView
            android:id="@+id/tv_search"
            style="@style/textTitleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_size8"
            android:text="查询" />
    </LinearLayout>
