<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ll"
    android:layout_margin="@dimen/margin_size5"
    android:padding="@dimen/dp_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/meituan">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/shop_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商家名称"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/order_Pay_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-06-10 16:28:17"
                android:layout_marginRight="10dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/it_text"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款预估收入"
                    android:textSize="@dimen/font_size12"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/balance_Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/it_text_1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款金额"
                    android:textSize="@dimen/font_size12"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/actual_Order_Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/it_text_2"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/order_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/font_size14"/>
            <TextView
                android:id="@+id/fuzhi"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size14"
                android:layout_marginRight ="10dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>