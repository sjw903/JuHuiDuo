<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size80"
    android:paddingRight="@dimen/margin_size10"
    android:orientation="horizontal">
<TextView
    android:id="@+id/tv_title"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:textColor="@color/col_333"
    android:textSize="@dimen/font_size20"
    android:layout_marginLeft="@dimen/margin_size8"
    android:gravity="center_vertical"
    android:text="58元/月"/>
    <CheckBox
        android:id="@+id/rb_one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/cb_set_set"
        android:clickable="false"
        android:focusable="false"
        android:textSize="14sp" />
</LinearLayout>