<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin_size13"
    android:paddingRight="@dimen/margin_size13"
    android:paddingBottom="@dimen/margin_size5"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size35"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textColor="@color/col_333"
        android:textSize="@dimen/font_size16"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:textColor="@color/col_999"
        android:textSize="@dimen/font_size13"
        android:text=""/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size1"
        android:background="@color/col_eb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size10"
        android:layout_marginBottom="@dimen/margin_size10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="@dimen/margin_size75"
            android:layout_height="@dimen/margin_size75"
            android:layout_marginRight="@dimen/margin_size2"
            android:layout_marginTop="@dimen/margin_size2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size15"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_child"
                style="@style/textTitleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_333"
                android:textSize="@dimen/font_size14"
                tools:text="产品名称" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_size3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size14"
                    android:textColor="@color/col_666"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="80dp"
                    android:autoSizeMinTextSize="2dp"
                    android:autoSizeTextType="uniform"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_copy1"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_size12"
                    android:textColor="@color/red1"
                    android:text="复制"
                    android:paddingLeft="@dimen/margin_size5"
                    android:paddingRight="@dimen/margin_size5"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_stu"
                style="@style/textTitleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size5"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size12"
                android:paddingLeft="@dimen/margin_size5"
                android:paddingRight="@dimen/margin_size5"
                android:background="@drawable/bg_border_orange_3"
                tools:text="" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--付款预估收入-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size12"
                android:textColor="@color/col_999"
                android:gravity="center"
                android:text="付款预估收入"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginTop="@dimen/margin_size3"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/tv_one_d"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical|right"
                      android:text="¥"
                      android:textColor="@color/col_999"
                      android:textSize="@dimen/font_size12" />
                  <TextView
                      android:id="@+id/tv_one"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/app_main_color"
                      android:gravity="center_vertical|left"
                      android:textSize="@dimen/font_size16"
                      android:textStyle="bold"
                      android:text=""/>
              </LinearLayout>
        </LinearLayout>
        <!--付款金额-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size12"
                android:textColor="@color/col_999"
                android:gravity="center"
                android:text="付款金额"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_size3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/col_999"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/font_size12"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/col_333"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/font_size16"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <!--提成-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size12"
                android:visibility="gone"
                android:textColor="@color/col_999"
                android:gravity="center"
                android:text="提成"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_size3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/font_size16"
                    android:textStyle="bold"
                    android:textColor="@color/red1"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red1"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/font_size12"
                    android:visibility="gone"
                    android:text="2.5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>