<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/f0"
    android:orientation="vertical">
    <include layout="@layout/include_topbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_ll"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="#ff000000"
                android:textSize="14sp"
                />
            <!--<TextView-->
                <!--android:id="@+id/it_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="请输入姓名"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="42dp"-->
                <!--android:textColor="#ff989898"-->
                <!--android:textSize="14sp"-->
                <!--/>-->
            <EditText
                android:id="@+id/name_edit"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:hint="请输入姓名"
                android:focusable="true"
                android:singleLine="true"
                android:background="@null"
                android:textColor="#000000"
                android:layout_marginLeft="42dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_ll"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textColor="#ff333333"
                android:textSize="14sp"
                />
            <!--<TextView-->
                <!--android:id="@+id/it_text_1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="请输入电话"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="42dp"-->
                <!--android:textColor="#ff989898"-->
                <!--android:textSize="14sp"-->
                <!--/>-->
            <EditText
                android:id="@+id/phone_edit"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:hint="请输入电话"
                android:singleLine="true"
                android:inputType="number"
                android:background="@null"
                android:textColor="#000000"
                android:layout_marginLeft="42dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_ll"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="人数"
                android:textColor="#ff333333"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/nums_edit"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:hint="请输入人数"
                android:singleLine="true"
                android:background="@null"
                android:inputType="number"
                android:layout_marginLeft="42dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/iv_image_1"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="11dp"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="vertical"
            android:background="@drawable/shape_ll">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请上传作品"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_selected_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_margin="4dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:text="上传图片"></TextView>
            <ImageView
                android:id="@+id/img_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="13dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:src="@mipmap/add_img"/>
            <GridView
                android:id="@+id/gridView1"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:layout_margin="10dp"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:numColumns="auto_fit"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:gravity="center" >
            </GridView>
        </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/bt_button"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="45dp"
            android:background="@drawable/hd_shape"
            android:text="确认提交"
            android:textColor="#ffffffff"
            android:textSize="15sp"/>


    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>