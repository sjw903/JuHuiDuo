<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin_size10"
    android:paddingTop="@dimen/margin_size10"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_size12"
        android:paddingRight="@dimen/margin_size12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ghkjdhgk"
            android:textColor="@color/col_999"
            android:textSize="@dimen/font_size12" />

        <TextView
            android:id="@+id/tv_stu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ghkjdhgk"
            android:textColor="@color/red"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/font_size12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_size12"
        android:paddingRight="@dimen/margin_size12"
        android:layout_marginTop="@dimen/margin_size15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ghkjdhgk"
            android:textColor="@color/col_999"
            android:textSize="@dimen/font_size12" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:text="ghkjdhgk"
            android:textColor="@color/col_999"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/font_size12" />
    </LinearLayout>
</LinearLayout>