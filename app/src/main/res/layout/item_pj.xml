<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/margin_size15">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/sjxxs1" />



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="淮南子"
                android:textColor="#ff222222"
                android:textSize="12sp" />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:numStars="5"
                android:progressTint="#FE9900"
                android:rating="4" />

        </LinearLayout>

        <TextView
            android:id="@+id/it_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2019-06-10"
            android:textColor="#ff898989"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:text="醇香奶茶搭配香滑补丁、 Q弹珍珠及鲜嫩口感的仙草冻，多层次的丰富口感，一次满足！"
        android:textColor="#ff000000"
        android:textSize="14sp" />

    <!-- <ImageView-->


    <!-- android:id="@+id/icon_img"-->


    <!-- android:layout_marginTop="9.5dp"-->


    <!-- android:layout_marginLeft="58dp"-->


    <!-- android:layout_width="98dp"-->


    <!-- android:layout_height="99dp"-->


    <!-- android:src="@mipmap/default_cover"-->


    <!-- />-->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>