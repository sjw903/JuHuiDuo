<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_eb"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/margin_size1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_size20"
        android:paddingTop="@dimen/margin_size15"
        android:paddingRight="@dimen/margin_size10"
        android:paddingBottom="@dimen/margin_size15">

        <com.android.jdhshop.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/margin_size69"
            android:layout_height="@dimen/margin_size69"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_size10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/textTitleContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_size5"
                    android:text=""
                    android:textSize="@dimen/font_size16" />

                <TextView
                    android:id="@+id/txt_huiyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size2"
                    android:background="@drawable/bg_txt_red"
                    android:paddingLeft="@dimen/margin_size5"
                    android:paddingTop="@dimen/margin_size1"
                    android:paddingRight="@dimen/margin_size5"
                    android:paddingBottom="@dimen/margin_size1"
                    android:text="成长熊"
                    android:textColor="@color/red1"
                    android:textSize="@dimen/font_size12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_size5"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/textHindContent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="邀请码:"
                    android:gravity="center"
                    android:textSize="@dimen/font_size14" />
                <TextView
                    android:id="@+id/txt_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="-3dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/red1"
                    android:textSize="@dimen/font_size18" />
                <TextView
                    android:id="@+id/btn_copy"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_size10"
                    android:layout_marginLeft="@dimen/margin_size10"
                    android:layout_marginRight="@dimen/margin_size5"
                    android:textColor="@color/red1"
                    android:text="复制"
                    android:paddingTop="@dimen/margin_size2"
                    android:paddingBottom="@dimen/margin_size2"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_txt_red"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_jie"
                style="@style/textHindContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_size5"
                android:padding="@dimen/margin_size5"
                android:paddingTop="@dimen/margin_size5"
                android:text=""
                android:textSize="@dimen/font_size14" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size10"
                android:layout_marginTop="@dimen/margin_size10"
                android:layout_marginRight="@dimen/margin_size10"
                android:background="@drawable/shape_ll"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ll2"
                    android:padding="@dimen/margin_size10">

                    <TextView
                        android:id="@+id/txt_ye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队余额: "
                        android:textColor="@color/gold"
                        android:textSize="@dimen/font_size18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_ye"
                        android:layout_marginTop="@dimen/margin_size5"
                        android:text="每月22日结算上月收入"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size12" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_may_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_size8"
                            android:text="¥"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本月预估"
                            android:textSize="@dimen/font_size12" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_size10"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上月预估: "
                                android:textSize="@dimen/font_size12" />
                            <TextView
                                android:id="@+id/txt_last_may"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥800"
                                android:textColor="#E4C8B4"
                                android:textSize="@dimen/font_size14" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/margin_size1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_size35"
                        android:layout_marginTop="@dimen/margin_size10"
                        android:background="@color/col_eb"></View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_today_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_size8"
                            android:text="¥"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日收益"
                            android:textSize="@dimen/font_size12" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_size10"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上月结算: "
                                android:textSize="@dimen/font_size12" />
                            <TextView
                                android:id="@+id/txt_month_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥650"
                                android:textColor="#E4C8B4"
                                android:textSize="@dimen/font_size14" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size10"
                android:layout_marginTop="@dimen/margin_size10"
                android:layout_marginRight="@dimen/margin_size10"
                android:background="@drawable/shape_ll"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_size10">

                <TextView
                    android:id="@+id/txt_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ll"
                    android:gravity="center"
                    android:padding="@dimen/margin_size15"
                    android:text="——升级至精英熊·4大权益——"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_size10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_size10"
                        android:gravity="center"
                        android:text="优惠券"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_size10"
                        android:gravity="center"
                        android:text="直购高佣"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_size10"
                        android:gravity="center"
                        android:text="分享高佣"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_size10"
                        android:gravity="center"
                        android:text="管理收益"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size10"
                android:layout_marginTop="@dimen/margin_size10"
                android:layout_marginRight="@dimen/margin_size10"
                android:background="@drawable/shape_ll"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_size10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ll"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_size10"
                    android:paddingRight="@dimen/margin_size10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的成长值"
                        android:textColor="#363637"
                        android:textSize="@dimen/font_size15"/>
                    <TextView
                        android:id="@+id/txt_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size10"
                        android:layout_marginTop="@dimen/margin_size2"
                        android:text=""
                        android:textColor="@color/red1"
                        android:textSize="@dimen/font_size18" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size5"
                    android:layout_marginBottom="@dimen/margin_size5"
                    android:background="@drawable/shape_ll"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_size10"
                    android:paddingRight="@dimen/margin_size10">
                    <TextView
                        android:id="@+id/txt_name_group_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成长熊"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/font_size12" />
                    <TextView
                        android:id="@+id/txt_name_group_two"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="奋斗熊"
                        android:layout_marginLeft="@dimen/margin_size20"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/font_size12" />
                    <TextView
                        android:id="@+id/txt_name_group_three"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="精英熊"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/margin_size20"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/font_size12" />
                    <TextView
                        android:id="@+id/txt_name_group_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center|right"
                        android:text="聚多惠"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/font_size12" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/pb_progressbar"
                            style="@style/StyleProgressBarMini"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_size5"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_size30"
                            android:layout_marginTop="@dimen/margin_size5"
                            android:layout_marginRight="@dimen/margin_size30"
                            android:layout_marginBottom="@dimen/margin_size5"
                            android:background="@drawable/shape_progress_bg"
                            android:max="500"
                            android:progress="11" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_size30"
                        android:layout_marginRight="@dimen/margin_size30"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_size35"
                            android:layout_weight="0.15"
                            android:text="·"
                            android:textSize="@dimen/font_size25"
                            android:gravity="right"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_size35"
                            android:layout_weight="0.8"
                            android:text="·"
                            android:textSize="@dimen/font_size25"
                            android:gravity="right"
                            android:textColor="@color/white" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_size35"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size12" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_size35"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size12" />
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="@dimen/margin_size30"
                    android:layout_marginRight="@dimen/margin_size30"
                    android:background="@drawable/shape_ll"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_exp_group_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.12"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />
                    <TextView
                        android:id="@+id/txt_exp_group_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />
                    <TextView
                        android:id="@+id/txt_exp_group_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />
                    <TextView
                        android:id="@+id/txt_exp_group_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="500"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size45"
                    android:layout_marginTop="@dimen/margin_size5"
                    android:layout_marginRight="@dimen/margin_size45"
                    android:layout_marginBottom="@dimen/margin_size15"
                    android:background="@drawable/shape_ll"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="推荐注册 +1"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/font_size14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="推荐首购 +3"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/font_size14" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size10"
                android:layout_marginBottom="@dimen/margin_size10"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/img_feed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                     />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>