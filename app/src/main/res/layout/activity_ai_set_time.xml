<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:divider="@drawable/divider_line"
    android:showDividers="middle"
    android:dividerPadding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AiSetTimeActivity">
    <include layout="@layout/include_topbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_ai_settime_faqi"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_my_user_next"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/margin_size12"
        android:paddingRight="@dimen/margin_size12"
        android:text="发品时间(起)"
        android:textColor="@color/black"
        android:textSize="15dp" />
        <TextView
            android:id="@+id/ai_set_timestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginRight="27dp"
            android:text="06:30:00"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ai_settime_end"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_my_user_next"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/margin_size12"
            android:paddingRight="@dimen/margin_size12"
            android:text="发品时间(终)"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/ai_set_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginRight="27dp"
            android:text="23:30:00"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ai_setqunliao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/margin_size12"
            android:paddingRight="@dimen/margin_size12"
            android:text="发品间隔"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <org.angmarch.views.NiceSpinner
            android:id="@+id/tv_title_yijiesuan"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_title"
            android:textSize="13dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发品时间设置说明"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/text_set_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="14dp"
        android:textColor="#666666"
        android:layout_marginRight="20dp"
        android:text=""
        />
    <Button
        android:id="@+id/set_huanying_geng"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/set_assistant_yuanjiao"
        android:text="更新"
        android:textSize="16dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"/>
</LinearLayout>