<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_f7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_jb"
        android:elevation="@dimen/margin_size1"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_size5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size50"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/tv_left"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的团队"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size16" />
        </RelativeLayout>

        <TextView
            android:id="@+id/edt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size15"
            android:gravity="center"
            android:text="27"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size30"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size12"
            android:layout_marginTop="@dimen/margin_size10"
            android:layout_marginRight="@dimen/margin_size12"
            android:layout_marginBottom="@dimen/margin_size15"
            android:gravity="center"
            android:singleLine="true"
            android:text="总人数"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size1"
            android:background="@color/col_f7"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size14" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_size10"
                android:layout_marginBottom="@dimen/margin_size10"
                android:background="@color/white"></View>

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size14" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_size10"
                android:layout_marginBottom="@dimen/margin_size10"
                android:background="@color/white"></View>

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size14" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_size10"
                android:layout_marginBottom="@dimen/margin_size10"
                android:background="@color/white"></View>

            <TextView
                android:id="@+id/txt_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_size20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_size5"
            android:text="团队订单"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总数" />

            <TextView
                android:id="@+id/txt_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="20"
                android:textColor="@color/orange" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/txt_seven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/txt_eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/txt_nine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_size20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawablePadding="@dimen/margin_size5"
            android:text="团队贡献收入"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总收入" />

            <TextView
                android:id="@+id/txt_ten"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="20"
                android:textColor="@color/orange" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_eleven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/txt_twelve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/txt_thirteen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/txt_fourteen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_size10"
                android:text="@string/test_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>