<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.android.jdhshop.juduohui.unt.ZoomImageView
    android:id="@+id/image_scale_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/image_scale_rll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rlll"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/image_scale_image"
        app:layout_constraintBottom_toTopOf="@+id/image_scale_image"
        app:layout_constraintEnd_toEndOf="@id/image_scale_image"
        app:layout_constraintEnd_toStartOf="@+id/image_scale_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>