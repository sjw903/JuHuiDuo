<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_farther"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/infomation_body_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pinglun_box"
        >

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smart_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.android.jdhshop.utils.MyScrollView
                android:id="@+id/main_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/news_top_adv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/news_title"
                        android:layout_below="@id/news_top_adv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:paddingVertical="0dp"
                        android:text="文章标题"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:id="@+id/pub_info_header"
                        android:layout_below="@id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="0dp"
                        android:orientation="horizontal">
                        <com.android.jdhshop.widget.CircleImageView
                            android:id="@+id/pub_info_header_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@color/black"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/pub_info_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:text="媒体名称"/>
                            <TextView
                                android:id="@+id/pub_info_other"
                                android:textColor="#999999"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="14sp"
                                android:text="发布日期"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/header_below_adv"
                        android:layout_below="@id/pub_info_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="0dp"
                        android:paddingBottom="3dp"
                        android:orientation="vertical"/>

                    <WebView
                        android:id="@+id/news_infomation_web"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_below="@id/header_below_adv" />
                    <TextView
                        android:id="@+id/news_expand_btn"
                        android:layout_below="@id/news_infomation_web"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:layout_marginTop="-100dp"
                        android:paddingTop="45dp"
                        android:textSize="16sp"
                        android:textColor="#FF5722"
                        android:background="@drawable/glide_bg_trans_white"
                        android:clickable="true"
                        android:text="点击展开全文"/>
                    <LinearLayout
                        android:id="@+id/common_function"
                        android:layout_below="@id/news_infomation_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:showDividers="middle"
                        android:divider="@drawable/divider_height"
                        android:dividerPadding="10dp"
                        >
                        <TextView
                            android:id="@+id/content_share"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/news_share_button"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="18dp"
                            android:textColor="#FFFFFF"
                            android:text="分享本文，邀请徒弟一起来阅读得奖励"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#FFFFFF"
                            android:padding="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="此文章为用户推荐发布/转载，不代表本平台观点，如果信息不真实，或让您感觉到不适，可以点些举报删除" />

                            <TextView
                                android:id="@+id/jubao_shanchu"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:text="举报"
                                android:textColor="#B10000" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/recommend_box"
                        android:layout_below="@id/common_function"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="精彩推荐"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:background="@drawable/bottom_border_no_padding"
                            />
                        <LinearLayout
                            android:id="@+id/recommend_adv_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"
                            android:background="@drawable/bottom_border_no_padding"
                            android:orientation="vertical"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/news_recommend_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:background="#FFFFFF"/>
                    </LinearLayout>
                </RelativeLayout>
            </com.android.jdhshop.utils.MyScrollView>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <RelativeLayout
            android:id="@+id/golds_circle_box"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="55dp"
            android:layout_marginEnd="15dp"
            android:visibility="visible">

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/golds_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"

                android:minWidth="60dp"
                android:minHeight="60dp" />

            <ImageView
                android:id="@+id/gold_bg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="#00FFFFFF" />

            <ImageView
                android:id="@+id/gold_ani"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:background="#00FFFFFF"
                android:visibility="invisible" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pinglun_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:divider="@drawable/divider_news"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pinglun_text"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/news_input_bg"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:freezesText="false"
            android:layout_marginEnd="14dp"
            android:text="写评论"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/jump_pl"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_news_pp"/>
        <ImageView
            android:id="@+id/i_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_i_like"/>
        <ImageView
            android:id="@+id/i_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_ishare"/>

    </LinearLayout>
</RelativeLayout>