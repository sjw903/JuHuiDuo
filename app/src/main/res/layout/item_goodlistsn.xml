<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="@dimen/margin_size3"
    android:paddingTop="@dimen/margin_size5"
    android:paddingBottom="@dimen/margin_size5"
    android:background="@drawable/shape_ll"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/itemgoodlist_img"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />
            <TextView
                android:id="@+id/itemgoodlist_name"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/margin_size3"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/font_size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/itemgoodlist_lisheng"
                android:text="立省"
                android:textSize="@dimen/font_size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_size3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/itemgoodlist_pric"
                    android:textColor="#F14B11"
                    android:textSize="12dp"
                    android:layout_marginLeft="@dimen/margin_size5"
                    android:text="¥ 12300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/itemgoodlist_oldpric"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size10"
                    android:text="¥ 12300"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/itemgoodlist_qiang"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_size5"
                android:layout_alignParentRight="true"
                android:text="抢"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size10"
                android:background="@drawable/shape_ll"
                android:layout_width="@dimen/margin_size20"
                android:layout_height="@dimen/margin_size20" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
