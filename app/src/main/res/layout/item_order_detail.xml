<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/margin_size10">
    <ImageView
        android:id="@+id/img_shop"
        android:scaleType="fitXY"
        android:layout_width="@dimen/margin_size80"
        android:layout_height="@dimen/margin_size80" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_size5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/col_333"
            android:textSize="@dimen/font_size14"
            android:text="百果园(珠江路店)"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/margin_size5"
            android:gravity="center|left"/>
        <TextView
            android:id="@+id/txt_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size12"
            android:text=""
            android:paddingLeft="@dimen/margin_size5"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red1"
                android:textSize="@dimen/font_size16"
                android:text=""
                android:paddingLeft="@dimen/margin_size5"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size14"
                android:text=""
                android:paddingLeft="@dimen/margin_size5"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"></View>
            <ImageView
                android:id="@+id/img_jian"
                android:layout_width="@dimen/margin_size20"
                android:layout_height="@dimen/margin_size20"
                android:src="@mipmap/jian"/>
            <TextView
                android:id="@+id/txt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_333"
                android:textSize="@dimen/font_size14"
                android:text="1"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/img_jia"
                android:layout_width="@dimen/margin_size20"
                android:layout_height="@dimen/margin_size20"
                android:src="@mipmap/jia"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>