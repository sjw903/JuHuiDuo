<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bg_head2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/margin_size50"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="@dimen/margin_size30"
            android:layout_height="@dimen/margin_size30"
            android:drawableLeft="@mipmap/icon_back"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_size10"
            android:background="@drawable/back_bg"
            android:paddingLeft="@dimen/margin_size7"
            android:textSize="@dimen/font_size14"
            android:visibility="invisible" />
            <RadioGroup
                android:id="@+id/rg_top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_height="@dimen/margin_size45">
                <RadioButton
                    android:id="@+id/rb_one"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_line2"
                    android:checked="true"
                    android:gravity="center"
                    android:textSize="@dimen/font_size16"
                    android:layout_height="match_parent"
                    android:text="商品"/>
                <RadioButton
                    android:id="@+id/rb_three"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:button="@null"
                    android:background="@drawable/radio_line2"
                    android:gravity="center"
                    android:textSize="@dimen/font_size16"
                    android:layout_height="match_parent"
                    android:text="评论"/>
                <RadioButton
                android:id="@+id/rb_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio_line2"
                android:gravity="center"
                android:textSize="@dimen/font_size16"
                android:layout_height="match_parent"
                android:text="详情"/>
                <RadioButton
                    android:id="@+id/rb_four"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_line2"
                    android:gravity="center"
                    android:textSize="@dimen/font_size16"
                    android:layout_height="match_parent"
                    android:text="推荐"/>
            </RadioGroup>
        <!--<TextView-->
            <!--android:id="@+id/tv_title"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_weight="1"-->
            <!--android:ellipsize="end"-->
            <!--android:fitsSystemWindows="true"-->
            <!--android:gravity="center"-->
            <!--android:maxEms="12"-->
            <!--android:maxLines="1"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/font_size16"-->
            <!--tools:text="标题名称" />-->
        <TextView
            android:layout_width="@dimen/margin_size30"
            android:layout_height="@dimen/margin_size30"
            android:drawableLeft="@mipmap/icon_back"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_size10"
            android:background="@drawable/back_bg"
            android:paddingLeft="@dimen/margin_size7"
            android:textSize="@dimen/font_size14"
            android:visibility="invisible" />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="@android:color/white"
        app:srlPrimaryColor="#444444">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.android.jdhshop.utils.MyScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/root_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_smoke"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:elevation="@dimen/margin_size5"
                    android:background="@drawable/qq"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/margin_size20"
                    android:paddingTop="@dimen/margin_size5"
                    android:paddingBottom="@dimen/margin_size5"
                    android:paddingLeft="@dimen/margin_size20"
                    android:layout_marginTop="@dimen/margin_size80"
                    android:layout_marginLeft="@dimen/margin_size20"
                    android:layout_height="wrap_content">
                    <com.android.jdhshop.widget.CircleImageView
                        android:id="@+id/img_rr"
                        android:layout_width="@dimen/margin_size30"
                        android:src="@mipmap/app_icon"
                        android:layout_height="@dimen/margin_size30" />
                    <TextView
                        android:id="@+id/txt_sm_txt"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/font_size14"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <com.zhouwei.mzbanner.MZBannerView
                    android:id="@+id/homeBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:open_mz_mode="false"
                    app:canLoop="false"
                    app:indicatorAlign="center"
                    app:indicatorPaddingLeft="10dp"
                    />
                <TextView
                    android:id="@+id/title_tv"
                    style="@style/textTitleContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/homeBanner"
                    android:paddingLeft="@dimen/margin_size10"
                    android:paddingTop="@dimen/margin_size10"
                    android:paddingRight="@dimen/margin_size10"
                    android:textSize="@dimen/font_size16"
                    tools:text="" />

                <LinearLayout
                    android:id="@+id/dd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_tv"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/store_name_tv"
                        style="@style/textHindContent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size10"
                        android:layout_marginRight="@dimen/margin_size10"
                        android:paddingTop="@dimen/margin_size5"
                        android:textSize="@dimen/font_size14"
                        tools:text="店名..." />
                    <TextView
                        android:id="@+id/store_sold_num"
                        style="@style/textHindContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size10"
                        android:layout_marginRight="@dimen/margin_size10"
                        android:paddingTop="@dimen/margin_size5"
                        android:textSize="@dimen/font_size14"
                        tools:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dd"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_size10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_red"
                        android:paddingLeft="@dimen/margin_size8"
                        android:paddingTop="@dimen/margin_size5"
                        android:paddingRight="@dimen/margin_size8"
                        android:paddingBottom="@dimen/margin_size5"
                        android:text="券后价"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size12" />

                    <TextView
                        android:id="@+id/after_coupon_tv"
                        style="@style/textRedContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size5"
                        android:textSize="@dimen/font_size14"
                        tools:text="¥ 5.0" />

                    <TextView
                        android:id="@+id/price_tv"
                        style="@style/textHindContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size5"
                        tools:text="原价:¥30.00" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></View>

                    <TextView
                        android:id="@+id/tv_share"
                        style="@style/textRedTitleContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_btn"
                        android:gravity="right"
                        android:paddingLeft="@dimen/margin_size10"
                        android:paddingTop="@dimen/margin_size5"
                        android:paddingRight="@dimen/margin_size10"
                        android:paddingBottom="@dimen/margin_size5"
                        tools:text="5.0元" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size30"
                    android:layout_below="@id/ll_discount"
                    android:layout_marginLeft="@dimen/margin_size10"
                    android:layout_marginRight="@dimen/margin_size10"
                    android:background="@color/col_fef1d1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/col_c5a984"
                        android:textSize="@dimen/font_size14" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="立即购买 >>"
                        android:textColor="@color/col_c5a984"
                        android:textSize="@dimen/font_size14" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ds"
                    android:layout_width="match_parent"
                    android:layout_below="@id/ll_vip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/commis"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_size10"
                        android:layout_marginRight="@dimen/margin_size10"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_size20"
                            android:layout_height="match_parent"
                            android:background="@mipmap/kuang_white">
                            <TextView
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:text="¥"
                                android:paddingTop="@dimen/margin_size5"
                                android:textSize="@dimen/font_size14"
                                android:textColor="@color/colorPrimary"
                                android:layout_height="wrap_content"
                                />
                            <TextView
                                android:id="@+id/txt_coupon"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textSize="@dimen/font_size25"
                                android:textColor="@color/colorPrimary"
                                android:layout_height="wrap_content"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/margin_size5"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:paddingRight="@dimen/margin_size10"
                                    android:text="优惠券有效期:"
                                    android:textSize="@dimen/font_size14"
                                    android:textColor="@color/col_666"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/txt_time"
                                    android:layout_width="match_parent"
                                    android:gravity="left"
                                    android:text=""
                                    android:textSize="@dimen/font_size12"
                                    android:textColor="@color/gray"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txt_left"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:paddingRight="@dimen/margin_size10"
                                android:text="立即领券"
                                android:layout_marginRight="@dimen/margin_size10"
                                android:textSize="@dimen/font_size14"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/kuang_purple" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/commis2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_size10"
                        android:layout_marginRight="@dimen/margin_size10"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_size20"
                            android:layout_height="match_parent"
                            android:background="@mipmap/kuang_white">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/margin_size5"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:text="暂无优惠券"
                                    android:textSize="@dimen/font_size20"
                                    android:textColor="@color/darkgray"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:text="分享或购买可获得佣金"
                                    android:textSize="@dimen/font_size12"
                                    android:textColor="@color/gray"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txt_left2"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:paddingRight="@dimen/margin_size10"
                                android:text="立即购买"
                                android:layout_marginRight="@dimen/margin_size10"
                                android:textSize="@dimen/font_size14"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/kuang_purple" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ds"
                    android:paddingBottom="@dimen/font_size10"
                    android:layout_marginLeft="@dimen/margin_size10"
                    android:layout_marginRight="@dimen/margin_size10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray"
                        android:text="发货"
                        android:textSize="@dimen/font_size12"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txt_address"
                        android:drawableLeft="@mipmap/fhd"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_size5"
                        android:layout_marginRight="@dimen/margin_size10"
                        android:textColor="@color/col_666"
                        android:textSize="@dimen/font_size12"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/jgqs_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="价格趋势"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="降价通知"
                                android:gravity="right"
                                android:visibility="gone"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    <com.android.jdhshop.widget.EchartView
                        android:id="@+id/echart_view"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_height="260dp"/>
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size10"
                    android:layout_below="@id/ll_address"
                    android:background="@color/col_eb"></View>
                <LinearLayout
                    android:id="@+id/ss"
                    android:layout_below="@id/v_line"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_goods_comment_num"
                        android:layout_width="match_parent"
                        android:text="宝贝评价(0)"
                        android:textColor="@color/col_666"
                        android:textSize="@dimen/font_size14"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/font_size10"/>
                    <com.zhy.view.flowlayout.FlowLayout
                        android:id="@+id/ll_flow"
                        android:paddingLeft="@dimen/font_size10"
                        android:paddingRight="@dimen/font_size10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.zhy.view.flowlayout.FlowLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/margin_size2"
                        android:paddingTop="@dimen/margin_size5"
                        android:paddingLeft="@dimen/font_size10"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <com.android.jdhshop.widget.CircleImageView
                            android:id="@+id/comment_img"
                            android:layout_width="@dimen/margin_size20"
                            android:layout_height="@dimen/margin_size20" />
                        <TextView
                            android:id="@+id/comment_name"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/margin_size6"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size12"
                            android:textColor="@color/gray"
                            android:text="小明"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/comment_content"
                        android:paddingTop="@dimen/margin_size2"
                        android:paddingLeft="@dimen/margin_size5"
                        android:paddingRight="@dimen/font_size10"
                        android:layout_width="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/margin_size6"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size12"
                        android:textColor="@color/col_666"
                        android:paddingBottom="@dimen/font_size10"
                        android:text="小明"/>
                </LinearLayout>
                <View
                    android:layout_below="@id/ss"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/col_eb"></View>
                <LinearLayout
                android:id="@+id/qq"
                    android:layout_marginTop="1dp"
                android:layout_below="@id/ss"
                android:layout_width="match_parent"
                    android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:padding="@dimen/font_size10">
                <com.android.jdhshop.utils.RoundImageView2
                    android:id="@+id/img_shop"
                    android:layout_width="@dimen/margin_size50"
                    android:layout_height="@dimen/margin_size50" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_size6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/txt_shop_title"
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/font_size14"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_size2"
                        android:id="@+id/txt_shop_comment"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/font_size12"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/mm"
                    android:layout_below="@id/qq"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingBottom="@dimen/font_size10"
                    android:paddingRight="@dimen/font_size10"
                    android:paddingLeft="@dimen/font_size10">
                    <TextView
                        android:id="@+id/txt_a"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size12"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txt_b"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size12"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txt_c"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size12"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:id="@+id/v_line2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size10"
                    android:layout_below="@id/mm"
                    android:visibility="gone"
                    android:background="@color/col_eb"></View>
                <TextView
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_line2"
                    android:gravity="center"
                    android:padding="@dimen/margin_size10"
                    android:text="商品详情"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />

                <WebView
                    android:id="@+id/web_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail"
                    android:layout_marginTop="-2dp"
                    android:padding="@dimen/margin_size10"></WebView>

                <TextView
                    android:id="@+id/about_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/web_detail"
                    android:gravity="center"
                    android:padding="@dimen/margin_size10"
                    android:text="看了又看"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size16" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/about_recommend_list"
                    android:layout_below="@id/about_recommend"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/margin_size50"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <ImageView
                    android:id="@+id/xqzq_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xqzcicon"
                    android:layout_marginTop="80dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </com.android.jdhshop.utils.MyScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
