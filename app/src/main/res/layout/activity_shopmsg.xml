<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:id="@+id/shopmsg_view"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/shopmsg_lyback"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="35dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/shop_fanhui"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
            <TextView
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="商品详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/shopmsg_share"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="35dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/shop_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="#f8f8f8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/shopmsg_recy"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/shopmsg_bigimg"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />
                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/shopmsg_name"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:text="名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/shopmsg_xiaoliang"
                        android:layout_alignParentRight="true"
                        android:text="销量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shopmsg_pric"
                            android:textSize="14dp"
                            android:textColor="#F56D26"
                            android:text="¥"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="10dp"
                            android:text="起"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/shopmsg_button"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="下单"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/icon_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:background="#f7f7f7"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="商品详情"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="10dp"
                    android:background="#f7f7f7"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <WebView
                    android:id="@+id/shopmsg_msg"
                    android:layout_marginTop="8dp"
                    android:text="asdfasdfkajfl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>