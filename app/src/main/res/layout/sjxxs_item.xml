<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="345dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/sjxxs"
    android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/it_time"
        android:layout_width="71.5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="2019-09-18"
        android:textSize="11.99sp"
        android:textColor="#989898" />
    <TextView
        android:id="@+id/it_summary"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:layout_marginRight="21.5dp"
        android:layout_marginLeft="11.5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="#不定时掉落的福利# 奶茶来啦~ 醇香奶茶搭配香滑补丁、	Q弹珍珠及鲜嫩口感的仙草冻~口感丰富,一次满足！9.9元/杯，限量1W份，先到先得哦~"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10.5dp"
        android:layout_marginLeft="10.5dp"
        android:layout_marginRight="11dp">

        <ImageView
            android:id="@+id/image_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_cover"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="11.5dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/it_tx"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:text="浏览 10万+"
            android:textColor="#ff969696"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_praice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71.5dp"
            android:src="@mipmap/icon_dynamic_praice" />

        <TextView
            android:id="@+id/it_tx1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="2.9W"
            android:textColor="#ff949494"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/image_comment"
            android:layout_width="21dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31.5dp"
            android:src="@mipmap/icon_dynamic_comment" />

        <TextView
            android:id="@+id/it_tx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1333"
            android:textColor="#ff949494"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/image_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31.5dp"
            android:src="@mipmap/icon_dynamic_share" />

    </LinearLayout>



</LinearLayout>