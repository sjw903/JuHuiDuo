<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/col_f7"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size50">
        <LinearLayout
            android:id="@+id/orderlist_lyback"
            android:layout_width="@dimen/margin_size50"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/fanhuifan"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </LinearLayout>
        <TextView
            android:textSize="@dimen/margin_size20"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="我的订单"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_size50" />
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/yuanjiao_button"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size50">

        <RelativeLayout
            android:id="@+id/orderlist_rldfk"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/orderlist_tvdfk"
                android:textColor="#F03E00"
                android:layout_centerInParent="true"
                android:text="待付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/orderlist_vdfk"
                android:layout_marginRight="@dimen/margin_size15"
                android:layout_marginLeft="@dimen/margin_size15"
                android:layout_alignParentBottom="true"
                android:background="#F03E00"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size3"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/orderlist_rldfh"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/orderlist_tvdfh"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:text="待使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:visibility="gone"
                android:id="@+id/orderlist_vdfh"
                android:layout_marginRight="@dimen/margin_size15"
                android:layout_marginLeft="@dimen/margin_size15"
                android:layout_alignParentBottom="true"
                android:background="#F03E00"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size3"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/orderlist_rldsh"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/orderlist_tvdsh"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:text="已使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:visibility="gone"
                android:id="@+id/orderlist_vdsh"
                android:layout_marginRight="@dimen/margin_size15"
                android:layout_marginLeft="@dimen/margin_size15"
                android:layout_alignParentBottom="true"
                android:background="#F03E00"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size3"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/orderlist_rldpj"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/orderlist_tvdpj"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:text="已退款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:visibility="gone"
                android:id="@+id/orderlist_vdpj"
                android:layout_marginRight="@dimen/margin_size15"
                android:layout_marginLeft="@dimen/margin_size15"
                android:layout_alignParentBottom="true"
                android:background="#F03E00"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size3"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/orderlist_rlall"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/orderlist_tvall"
                android:textColor="#F03E00"
                android:layout_centerInParent="true"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/orderlist_vall"
                android:layout_marginRight="@dimen/margin_size15"
                android:layout_marginLeft="@dimen/margin_size15"
                android:layout_alignParentBottom="true"
                android:background="#F03E00"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size3"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager

        android:id="@+id/orderlist_viewpager"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>