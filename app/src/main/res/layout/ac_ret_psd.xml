<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include layout="@layout/include_topbar" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_size30"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size10"
        android:background="@null"
        android:paddingTop="@dimen/margin_size8">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:drawablePadding="@dimen/margin_size5"
            android:drawableLeft="@mipmap/login_phone"
            android:paddingTop="@dimen/margin_size5"
            android:paddingBottom="@dimen/margin_size8"
            android:textSize="@dimen/font_size16" />

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size1"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size10"
        android:background="@color/col_eb"></View>
    <!--验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginTop="@dimen/margin_size5"
        android:layout_marginRight="@dimen/margin_size10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_size8">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入验证码"
                android:drawableLeft="@mipmap/login_yzm"
                android:drawablePadding="@dimen/margin_size5"
                android:paddingTop="@dimen/margin_size5"
                android:paddingBottom="@dimen/margin_size8"
                android:textSize="@dimen/font_size16" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size10"
            android:layout_marginRight="@dimen/margin_size10"
            android:background="@drawable/bg_txt_red"
            android:text="获取验证码"
            android:textColor="@color/red1"
            android:textSize="@dimen/font_size12" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size1"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size10"
        android:background="@color/col_eb"></View>

    <!--新密码-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size10"
        android:background="@null"
        android:paddingTop="@dimen/margin_size8">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="@dimen/margin_size5"
            android:drawableLeft="@mipmap/login_pwd"
            android:hint="新密码"
            android:inputType="textPassword"
            android:paddingTop="@dimen/margin_size5"
            android:paddingBottom="@dimen/margin_size8"
            android:textSize="@dimen/font_size16" />

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size1"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size10"
        android:background="@color/col_eb"></View>
    <!--重复密码-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size10"
        android:background="@null"
        android:paddingTop="@dimen/margin_size8">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/login_pwd"
            android:drawablePadding="@dimen/margin_size5"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingTop="@dimen/margin_size5"
            android:paddingBottom="@dimen/margin_size8"
            android:textSize="@dimen/font_size16" />

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size1"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size10"
        android:background="@color/col_eb"></View>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size35"
        android:layout_marginTop="@dimen/margin_size20"
        android:text="注册新账号"
        android:visibility="gone"
        android:textColor="@color/col_999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_fnish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size50"
        android:layout_marginLeft="@dimen/margin_size12"
        android:layout_marginTop="@dimen/margin_size35"
        android:layout_marginRight="@dimen/margin_size12"
        android:background="@drawable/bg_tv_circle_half_appmain"
        android:gravity="center"
        android:text="确认重置"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size14" />

    <include
        layout="@layout/include_contact_customer_service"
        android:visibility="gone" />
</LinearLayout>
