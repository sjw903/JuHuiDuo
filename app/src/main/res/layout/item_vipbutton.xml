<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="@dimen/margin_size10"
        android:layout_marginLeft="@dimen/margin_size10"
        android:background="@drawable/tpyc1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
        <RelativeLayout
            android:background="@drawable/tpyc3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size50">
            <ImageView
                android:id="@+id/itemvipbutton_img"
                android:src="@mipmap/app_icon"
                android:layout_marginLeft="@dimen/margin_size15"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/margin_size50"
                android:layout_height="@dimen/margin_size20" />
            <TextView
                android:id="@+id/itemvipbutton_name"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/margin_size69"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_size16"
                android:text="天猫国际进口超市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemvipbutton_more"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/margin_size10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="更多"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/itemvipbutton_recy"
            android:paddingTop="@dimen/margin_size8"
            android:paddingBottom="@dimen/margin_size8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>
