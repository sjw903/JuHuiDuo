<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/news_reward_adv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/bottom_border_no_padding"
        android:visibility="gone"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/news_adv_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/bottom_border_no_padding"
        android:visibility="gone"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_box_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bottom_border"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/news_title_b1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@string/welcome_to_app"/>
            <TextView
                android:id="@+id/pub_info_b1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="发布媒体" />
        </LinearLayout>

        <ImageView
            android:id="@+id/news_image_b1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_box_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bottom_border"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新闻标题"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/news_images"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/no_banner" />

        <LinearLayout
            android:id="@+id/image_box_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_line"
            android:showDividers="middle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_images_0"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/no_banner" />

            <ImageView
                android:id="@+id/news_images_1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/no_banner" />
            <ImageView
                android:id="@+id/news_images_2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/no_banner" />
        </LinearLayout>

        <TextView
            android:id="@+id/pub_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="发布媒体" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/news_content_adv"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/bottom_border_no_padding"
        android:padding="10dp"
        />
</LinearLayout>