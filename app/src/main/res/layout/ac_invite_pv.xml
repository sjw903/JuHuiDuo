<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/include_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_top"
        android:layout_below="@id/top">
        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size45"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_invite_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/radio_line"
                android:checked="true"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="图片邀请"
                android:textColor="@drawable/radio_radiogroup_style"
                android:textSize="@dimen/font_size15" />
            <RadioButton
                android:id="@+id/rb_invite_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:background="@drawable/radio_line"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="链接邀请"
                android:textColor="@drawable/radio_radiogroup_style"
                android:textSize="@dimen/font_size15" />
        </RadioGroup>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/invite_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
</LinearLayout>