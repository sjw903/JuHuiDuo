<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
                <LinearLayout
                    android:id="@+id/shopmore_lyback"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="35dp"
                    android:layout_height="match_parent">
                        <ImageView
                            android:src="@mipmap/icon_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/shopmore_title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:text="name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
                <LinearLayout
                    android:background="@drawable/new_lybg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:text="营业时间"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/shopmore_yytime"
                            android:layout_marginTop="8dp"
                            android:text="asdf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="8dp"
                            android:background="#f7f7f7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            android:text="餐厅服务"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/shopmore_recy"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>
                        <View
                            android:layout_marginTop="8dp"
                            android:background="#f7f7f7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <RelativeLayout
                            android:id="@+id/shopmore_zzxkz"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:text="营业许可资质"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp" />
                        </RelativeLayout>
                </LinearLayout>
</LinearLayout>