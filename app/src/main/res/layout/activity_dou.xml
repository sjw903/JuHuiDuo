<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_size15"
        android:elevation="@dimen/margin_size69"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_im"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_size20"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back_while"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_size80"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="抖券好货"
            android:textSize="@dimen/font_size18"
            android:padding="@dimen/dp_10"/>
    </LinearLayout>
    <com.lmx.library.media.VideoPlayRecyclerView
        android:id="@+id/vedio_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>